# ===========================================
# CONFIGURACIÓN UNIFICADA PARA DESARROLLO Y PRODUCCIÓN
# ===========================================

# Configuración de Supabase
# Reemplaza con tus valores reales de Supabase
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Configuración de Gemini AI
# Obtén tu API key desde: https://aistudio.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here
VITE_GEMINI_MODEL=gemini-2.0-flash
VITE_GEMINI_MAX_TOKENS=8192
VITE_GEMINI_TEMPERATURE=0
VITE_GEMINI_MAX_RETRIES=3
VITE_GEMINI_RETRY_DELAY=1000

# Configuración de entorno
# Valores: development | production
VITE_ENV=development

# Configuración de debug (solo para desarrollo)
# En producción se establece automáticamente como false
VITE_DEBUG=true

# Configuración de logging
# Niveles: error | warn | info | debug
VITE_LOG_LEVEL=info

# Configuración de la aplicación
VITE_APP_NAME=Lesson Inglesh
VITE_APP_VERSION=1.0.0

# URLs base para diferentes entornos
# Se puede usar para APIs externas o CDNs
VITE_API_BASE_URL=
VITE_CDN_BASE_URL=